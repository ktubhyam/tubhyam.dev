---
import BaseHead from "@components/layout/BaseHead.astro";
import GlassNav from "@components/layout/GlassNav.astro";
import GlassFooter from "@components/layout/GlassFooter.astro";
import AnimatedBackground from "@components/layout/AnimatedBackground.astro";
import ChatWidget from "@components/islands/ChatWidget.tsx";
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  hideNav?: boolean;
  ogType?: "website" | "article";
  publishedDate?: string;
  modifiedDate?: string;
  hasMath?: boolean;
}

const { title, description, image, hideNav = false, ogType, publishedDate, modifiedDate, hasMath } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      ogType={ogType}
      publishedDate={publishedDate}
      modifiedDate={modifiedDate}
      hasMath={hasMath}
    />
  </head>
  <body class="min-h-screen">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-[#0a0a0a] focus:border focus:border-[#333] focus:rounded-md focus:text-[var(--color-accent)] focus:text-sm focus:font-mono">Skip to main content</a>
    <AnimatedBackground />
    {!hideNav && <GlassNav />}
    <main id="main-content" class={hideNav ? "" : "pt-24"}>
      <slot />
    </main>
    <GlassFooter />
    <ChatWidget client:idle />
  </body>
</html>
