---
interface Props {
  title: string;
  description?: string;
  image?: string;
  ogType?: "website" | "article";
  publishedDate?: string;
  modifiedDate?: string;
  hasMath?: boolean;
}

const { title, description, image, ogType = "website", publishedDate, modifiedDate, hasMath = false } = Astro.props;

import { SITE, PUBLICATION } from "@lib/constants";

// Homepage uses the full name as title; subpages get "Page | tubhyam.dev"
// This prevents "Tubhyam Karthikeyan" repeating in search results
const isHomepage = Astro.url.pathname === "/" || Astro.url.pathname === "";
const pageTitle = isHomepage ? SITE.title : `${title} | ${SITE.shortTitle}`;
const ogTitle = title; // OG/Twitter cards show just the page title (site_name is separate)
const pageDescription = description ?? SITE.description;
// Generate dynamic OG image path for content pages, fallback to default
const pathname = Astro.url.pathname.replace(/\/$/, "");
const hasGeneratedOg = pathname.startsWith("/blog/") || pathname.startsWith("/projects/") || pathname.startsWith("/research/") || pathname.startsWith("/simulations/");
const ogImage = image ?? (hasGeneratedOg ? `/og${pathname}.png` : "/og/default.png");
const canonicalUrl = new URL(Astro.url.pathname, SITE.url);
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta -->
<title>{pageTitle}</title>
<meta name="title" content={ogTitle} />
<meta name="description" content={pageDescription} />
<meta name="author" content={SITE.author} />
<meta name="robots" content="index, follow" />
<meta name="google-site-verification" content="JBzFZzb7pTB2nJeaKAciQHIJ2KkFqbVDLVPLU8ZtlxY" />
<!-- keywords meta tag intentionally omitted — Google ignores it and it leaks SEO strategy -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={ogTitle} />
<meta property="og:description" content={pageDescription} />
<meta property="og:image" content={new URL(ogImage, SITE.url)} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:locale" content="en_US" />
{ogType === "article" && publishedDate && (
  <meta property="article:published_time" content={publishedDate} />
)}
{ogType === "article" && modifiedDate && (
  <meta property="article:modified_time" content={modifiedDate} />
)}
{ogType === "article" && (
  <meta property="article:author" content={SITE.url} />
)}
{ogType === "article" && (
  <meta property="article:publisher" content={PUBLICATION.name} />
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@ktubhyam" />
<meta name="twitter:creator" content="@ktubhyam" />
<meta name="twitter:title" content={ogTitle} />
<meta name="twitter:description" content={pageDescription} />
<meta name="twitter:image" content={new URL(ogImage, SITE.url)} />

<!-- Favicons & PWA -->
<meta name="theme-color" content="#000000" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title={PUBLICATION.name} href="/rss.xml" />

<!-- Structured Data (Person schema — skipped on homepage where ProfilePage includes it) -->
{!isHomepage && (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": SITE.author,
    "alternateName": "Karthikeyan T",
    "url": SITE.url,
    "email": SITE.email,
    "image": new URL("/og/default.png", SITE.url).toString(),
    "sameAs": [
      SITE.github,
      SITE.twitter,
      SITE.linkedin,
      "https://orcid.org/0009-0001-4424-7297",
      "https://scholar.google.com/citations?user=ktubhyam",
      "https://www.reddit.com/user/ktubhyam",
      "https://huggingface.co/ktubhyam",
      "https://pypi.org/user/ktubhyam/",
      "https://www.npmjs.com/~ktubhyam",
      "https://buttondown.com/latentchemistry",
      "https://www.chess.com/member/aktubhyam",
    ],
    "jobTitle": "Computational Chemist & ML Researcher",
    "affiliation": {
      "@type": "EducationalOrganization",
      "name": "Institute of Chemical Technology, Mumbai",
      "alternateName": "ICT Mumbai",
    },
    "knowsAbout": [
      "Spectroscopy",
      "Machine Learning",
      "Chemometrics",
      "Computational Chemistry",
      "Vibrational Spectroscopy",
    ],
  })} />
)}

<!-- Vercel Analytics -->
<script>
  import { inject } from "@vercel/analytics";
  inject();
</script>

<!-- Google News / Reader Revenue Manager -->
<script async type="application/javascript" src="https://news.google.com/swg/js/v1/swg-basic.js"></script>
<script>
  (self.SWG_BASIC = self.SWG_BASIC || []).push(basicSubscriptions => {
    basicSubscriptions.init({
      type: "NewsArticle",
      isPartOfType: ["Product"],
      isPartOfProductId: "CAowo6TfCw:openaccess",
      clientOptions: { theme: "dark", lang: "en" },
    });
  });
</script>

<!-- KaTeX Math Rendering (only on pages with equations) -->
{hasMath && <link rel="stylesheet" href="/styles/katex.min.css" />}

<!-- Fonts: self-hosted WOFF2 (preloaded for zero render-blocking) -->
<link rel="preload" href="/fonts/bricolage-grotesque-latin.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/inter-latin.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/jetbrains-mono-latin.woff2" as="font" type="font/woff2" crossorigin />
