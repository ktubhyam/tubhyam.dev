---
import { NAV_LINKS, SITE } from "@lib/constants";
import NavTerminalPath from "@components/islands/NavTerminalPath";

const currentPath = Astro.url.pathname;
---

<header class="glass-nav" id="main-nav">
  <div class="glass-nav-inner">
    <!-- Left: terminal pill with traffic lights + path -->
    <div class="terminal-pill">
      <NavTerminalPath client:load />
    </div>

    <!-- Center nav links (absolute) -->
    <nav class="glass-nav-links hidden md:flex" aria-label="Site navigation">
      {
        NAV_LINKS.map((link) => (
          <a
            href={link.href}
            class:list={[
              "glass-nav-link",
              currentPath.startsWith(link.href) && "glass-nav-link-active",
            ]}
          >
            {link.label}
          </a>
        ))
      }
    </nav>

    <!-- Right: GitHub + mobile trigger -->
    <div class="flex items-center gap-3">
      <a
        href={SITE.github}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="hidden md:flex glass-nav-icon"
      >
        <svg viewBox="0 0 24 24" class="w-4 h-4" fill="currentColor">
          <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.009-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
        </svg>
      </a>

      <button class="glass-nav-icon md:hidden" id="mobile-menu-trigger" aria-label="Toggle menu">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M3 12h18M3 6h18M3 18h18" />
        </svg>
      </button>
    </div>
  </div>
</header>

<!-- Mobile menu -->
<div class="md:hidden fixed inset-0 z-40 hidden" id="mobile-menu" aria-hidden="true">
  <div class="absolute inset-0 bg-black/85 backdrop-blur-sm" id="mobile-menu-backdrop"></div>
  <div class="absolute top-16 right-4 left-4 bg-surface border border-border rounded-xl p-6 flex flex-col gap-4 z-50">
    {
      NAV_LINKS.map((link) => (
        <a
          href={link.href}
          class:list={[
            "text-text-secondary hover:text-text-primary font-body text-sm transition-colors",
            currentPath.startsWith(link.href) && "text-accent",
          ]}
        >
          {link.label}
        </a>
      ))
    }
    <div class="pt-3 border-t border-border">
      <a href={SITE.github} target="_blank" rel="noopener noreferrer" class="text-text-muted text-xs font-mono hover:text-text-secondary transition-colors">
        GitHub â†’
      </a>
    </div>
  </div>
</div>

<style>
  .glass-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: rgba(0, 0, 0, 0.88);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    animation: nav-enter 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s both;
  }

  @keyframes nav-enter {
    from { opacity: 0; transform: translateY(-8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .glass-nav-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .terminal-pill {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    flex-shrink: 0;
  }

  .glass-nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .glass-nav-link {
    font-size: 13px;
    font-family: var(--font-body);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .glass-nav-link:hover {
    color: var(--color-text-primary);
  }

  .glass-nav-link-active {
    color: var(--color-accent);
  }

  .glass-nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: var(--color-text-muted);
    border-radius: 6px;
    border: none;
    background: none;
    cursor: pointer;
    transition: color 0.2s ease;
  }

  .glass-nav-icon:hover {
    color: var(--color-text-secondary);
  }
</style>

<script>
  const trigger = document.getElementById("mobile-menu-trigger");
  const menu = document.getElementById("mobile-menu");
  const backdrop = document.getElementById("mobile-menu-backdrop");

  function toggleMenu() {
    if (!menu) return;
    const isHidden = menu.classList.contains("hidden");
    menu.classList.toggle("hidden");
    menu.setAttribute("aria-hidden", String(!isHidden));
  }

  trigger?.addEventListener("click", toggleMenu);
  backdrop?.addEventListener("click", toggleMenu);
</script>
