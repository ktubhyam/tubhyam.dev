---
import PageLayout from "@layouts/PageLayout.astro";
import { getCollection } from "astro:content";
import { SITE } from "@lib/constants";

import BlurReveal from "@components/islands/BlurReveal";

const papers = (await getCollection("research"))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const statusColors: Record<string, string> = {
  published: "#34D399",
  preprint: "#60A5FA",
  "in-progress": "#C9A04A",
};

const collectionSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Research",
  "description": "Papers and publications in computational chemistry and machine learning.",
  "url": `${SITE.url}/research`,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": papers.length,
    "itemListElement": papers.map((paper, i) => ({
      "@type": "ListItem",
      "position": i + 1,
      "url": `${SITE.url}/research/${paper.id}`,
      "name": paper.data.title,
    })),
  },
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE.url },
    { "@type": "ListItem", "position": 2, "name": "Research", "item": `${SITE.url}/research` },
  ],
};
---

<PageLayout title="Research" description="Papers and publications in computational chemistry and machine learning.">
  <script type="application/ld+json" set:html={JSON.stringify(collectionSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <section class="py-12">
    <a href="/" class="inline-flex items-center gap-1 text-[11px] font-mono text-text-muted hover:text-text-secondary transition-colors mb-8">
      ‚Üê tubhyam.dev
    </a>

    <BlurReveal
      client:idle
      text="Research"
      className="text-4xl font-heading font-bold text-text-primary mb-2 tracking-tight"
      as="h1"
    />
    <p class="text-text-muted mb-10" style="opacity: 0; animation: fade-up 0.5s ease-out 0.3s forwards;">
      Papers and publications in computational chemistry, spectroscopy, and ML.
    </p>

    {papers.length === 0 && (
      <p class="text-text-muted text-sm">No publications yet.</p>
    )}

    <div class="flex flex-col gap-5">
      {papers.map((paper, i) => {
        const sColor = statusColors[paper.data.status] || "#555";
        const truncatedAbstract = paper.data.abstract.length > 200
          ? paper.data.abstract.slice(0, 200) + "..."
          : paper.data.abstract;
        return (
          <a
            href={`/research/${paper.id}`}
            class="paper-card group"
            style={`opacity: 0; animation: fade-up 0.5s ease-out ${0.1 + i * 0.08}s forwards;`}
          >
            <div class="flex items-center gap-3 mb-3">
              <span
                class="text-[10px] font-mono px-2 py-0.5 rounded-full border flex-shrink-0"
                style={`color: ${sColor}; border-color: ${sColor}33; background: ${sColor}0a;`}
              >
                {paper.data.status}
              </span>
              {paper.data.venue && (
                <span class="text-[10px] font-mono text-text-muted">{paper.data.venue}</span>
              )}
              <span class="text-[10px] font-mono text-text-muted ml-auto">{paper.data.date.getFullYear()}</span>
            </div>

            <h3 class="text-base font-heading font-semibold text-text-primary leading-snug mb-2 group-hover:text-accent transition-colors">
              {paper.data.title}
            </h3>

            <p class="text-xs text-text-muted mb-3">{paper.data.authors.join(", ")}</p>

            <p class="text-xs text-text-muted leading-relaxed mb-4">{truncatedAbstract}</p>

            <div class="flex flex-wrap gap-1.5">
              {paper.data.tags?.slice(0, 4).map((tag: string) => (
                <span class="text-[10px] font-mono text-text-muted bg-bg-secondary border border-border rounded-full px-2 py-0.5">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        );
      })}
    </div>
  </section>
</PageLayout>

<style>
  @keyframes fade-up {
    from { opacity: 0; transform: translateY(12px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .paper-card {
    display: block;
    text-decoration: none;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .paper-card:hover {
    border-color: var(--color-border-hover);
    background: var(--color-surface-hover);
  }
</style>
