---
import ProseLayout from "@layouts/ProseLayout.astro";
import TerminalWindow from "@components/ui/TerminalWindow.astro";
import TerminalBreadcrumb from "@components/ui/TerminalBreadcrumb.astro";
import { getCollection, render } from "astro:content";
import { SITE, PUBLICATION } from "@lib/constants";

import BlurReveal from "@components/islands/BlurReveal";

export async function getStaticPaths() {
  const papers = await getCollection("research");
  return papers.map((paper) => ({
    params: { slug: paper.id },
    props: { paper },
  }));
}

const { paper } = Astro.props;
const { Content } = await render(paper);

const statusColorMap: Record<string, string> = {
  published: "#34D399",
  preprint: "#4ECDC4",
  "in-progress": "#C9A04A",
};

const statusColor = statusColorMap[paper.data.status] ?? "#34D399";

const canonicalUrl = new URL(`/research/${paper.id}`, SITE.url).toString();

const scholarlySchema = {
  "@context": "https://schema.org",
  "@type": "ScholarlyArticle",
  "headline": paper.data.title,
  "abstract": paper.data.abstract,
  "datePublished": paper.data.date.toISOString(),
  "url": canonicalUrl,
  "mainEntityOfPage": { "@type": "WebPage", "@id": canonicalUrl },
  "author": paper.data.authors.map((name: string) => ({
    "@type": "Person",
    "name": name,
    ...(name === SITE.author && { "url": SITE.url, "sameAs": [SITE.github, SITE.twitter, SITE.linkedin] }),
  })),
  "publisher": {
    "@type": "Organization",
    "name": PUBLICATION.name,
    "url": `${SITE.url}/blog`,
  },
  ...(paper.data.venue && { "isPartOf": { "@type": "PublicationEvent", "name": paper.data.venue } }),
  ...(paper.data.doi && { "identifier": { "@type": "PropertyValue", "propertyID": "doi", "value": paper.data.doi } }),
  ...(paper.data.arxiv && { "sameAs": paper.data.arxiv }),
  "keywords": paper.data.tags.join(", "),
  "image": new URL("/og/default.png", SITE.url).toString(),
  "inLanguage": "en",
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE.url },
    { "@type": "ListItem", "position": 2, "name": "Research", "item": `${SITE.url}/research` },
    { "@type": "ListItem", "position": 3, "name": paper.data.title, "item": canonicalUrl },
  ],
};
---

<ProseLayout
  title={paper.data.title}
  description={paper.data.abstract}
  ogType="article"
  publishedDate={paper.data.date.toISOString()}
  hasMath={true}
>
  <script type="application/ld+json" set:html={JSON.stringify(scholarlySchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <header class="mb-12 not-prose">
    <TerminalBreadcrumb segments={[{ label: "research", href: "/research" }, { label: paper.data.title }]} />
    <TerminalWindow title={paper.id} status={paper.data.status} statusColor={statusColor}>
      <BlurReveal
        client:idle
        text={paper.data.title}
        className="text-4xl font-heading font-bold text-text-primary"
        as="h1"
      />
      <p class="mt-2 text-[#A78BFA]">{paper.data.authors.join(", ")}</p>
      {paper.data.venue && (
        <p class="mt-1 text-sm font-mono text-[#C9A04A]">{paper.data.venue}</p>
      )}

      {(paper.data.arxiv || paper.data.pdf) && (
        <div class="mt-5 space-y-1.5">
          {paper.data.arxiv && (
            <div class="flex items-center gap-2">
              <span class="text-[#34D399]">$</span>
              <span class="text-text-muted">open</span>
              <a
                href={paper.data.arxiv}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[#60A5FA] hover:underline"
              >
                {paper.data.arxiv}
              </a>
            </div>
          )}
          {paper.data.pdf && (
            <div class="flex items-center gap-2">
              <span class="text-[#34D399]">$</span>
              <span class="text-text-muted">open</span>
              <a
                href={paper.data.pdf}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[#FF6B6B] hover:underline"
              >
                {paper.data.pdf}
              </a>
            </div>
          )}
        </div>
      )}
    </TerminalWindow>
  </header>

  <Content />
</ProseLayout>
