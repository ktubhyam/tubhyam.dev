---
import PageLayout from "@layouts/PageLayout.astro";
import TerminalWindow from "@components/ui/TerminalWindow.astro";
import TerminalBreadcrumb from "@components/ui/TerminalBreadcrumb.astro";
import { SITE } from "@lib/constants";

import BlurReveal from "@components/islands/BlurReveal";
import TextScramble from "@components/islands/TextScramble";
---

<PageLayout title="About" description="Computational chemist, ML researcher, and open-source builder at ICT Mumbai. Spectroscopy, deep learning, and scientific computing.">
  <section class="py-12 max-w-3xl">
    <TerminalBreadcrumb segments={[{ label: "about" }]} />
    <BlurReveal
      client:idle
      text="About"
      className="text-3xl font-heading font-medium text-text-primary mb-8 tracking-tight"
      as="h1"
    />

    <!-- Bio -->
    <TerminalWindow title="about" status="~/.bio" class="mb-8">
      <div class="space-y-1.5">
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">1</span>
          <span class="text-[#34D399]">$</span>
          <span class="ml-2 text-text-secondary">cat about.md</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">2</span>
          <span class="text-text-secondary">&nbsp;</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">3</span>
          <span class="text-text-secondary">
            I'm <span class="text-text-primary font-medium">Tubhyam Karthikeyan</span>, a computational chemist and machine learning
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">4</span>
          <span class="text-text-secondary">
            researcher at <span class="text-text-primary font-medium">ICT Mumbai</span>. I work at the intersection of chemistry,
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">5</span>
          <span class="text-text-secondary">
            mathematics, and AI â€” building tools that help scientists understand
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">6</span>
          <span class="text-text-secondary">molecular behavior.</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">7</span>
          <span class="text-text-secondary">&nbsp;</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">8</span>
          <span class="text-text-secondary">
            My current research focuses on the <span class="italic text-[#C9A04A]">spectral inverse problem</span>: can you
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">9</span>
          <span class="text-text-secondary">
            determine a molecule's structure from its vibrational spectrum? I'm
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">10</span>
          <span class="text-text-secondary">
            developing the <a href="/research/spectral-identifiability" class="text-[#A78BFA] hover:underline">theoretical framework</a> (group-theoretic identifiability)
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">11</span>
          <span class="text-text-secondary">
            and the ML models (<a href="/projects/spektron" class="text-[#4ECDC4] hover:underline">Spektron</a>, a hybrid SSM-attention architecture)
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">12</span>
          <span class="text-text-secondary">to answer this question.</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">13</span>
          <span class="text-text-secondary">&nbsp;</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">14</span>
          <span class="text-text-secondary">
            When I'm not doing research, I build open-source Python libraries like
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">15</span>
          <span class="text-text-secondary">
            <a href="/projects/spectrakit" class="text-[#34D399] hover:underline">SpectraKit</a> for spectroscopy,
            create <a href="/simulations" class="text-[#60A5FA] hover:underline">interactive browser-based simulations</a>,
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">16</span>
          <span class="text-text-secondary">
            and <a href="/blog" class="text-[#FF6B6B] hover:underline">write about what I learn</a>.
          </span>
        </div>
      </div>
    </TerminalWindow>

    <!-- Skills -->
    <div class="mt-10">
      <div class="flex items-center gap-2 mb-6">
        <span class="text-accent font-mono text-xs">&gt;</span>
        <TextScramble
          client:visible
          text="Skills"
          className="text-xs font-mono text-text-muted uppercase tracking-widest"
          as="h2"
          speed={30}
        />
      </div>

      <TerminalWindow title="skills" status="loaded">
        <div class="space-y-4">
          <!-- Languages & Frameworks -->
          <div>
            <div class="flex">
              <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">1</span>
              <span class="text-[#A78BFA]">$</span>
              <span class="ml-2 text-text-secondary">cat skills/languages-and-frameworks</span>
            </div>
            <div class="flex mt-1.5 flex-wrap">
              <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">2</span>
              <div class="flex flex-wrap gap-1.5">
                {["Python", "PyTorch", "TypeScript", "React", "Astro"].map((skill) => (
                  <span class="inline-flex items-center px-2 py-0.5 text-xs rounded-md bg-[#A78BFA]/10 text-[#A78BFA] border border-[#A78BFA]/20">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <!-- Science & Research -->
          <div>
            <div class="flex">
              <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">3</span>
              <span class="text-[#C9A04A]">$</span>
              <span class="ml-2 text-text-secondary">cat skills/science-and-research</span>
            </div>
            <div class="flex mt-1.5 flex-wrap">
              <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">4</span>
              <div class="flex flex-wrap gap-1.5">
                {["Computational Chemistry", "Machine Learning", "Group Theory", "Spectroscopy"].map((skill) => (
                  <span class="inline-flex items-center px-2 py-0.5 text-xs rounded-md bg-[#C9A04A]/10 text-[#C9A04A] border border-[#C9A04A]/20">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <!-- Tools & Practices -->
          <div>
            <div class="flex">
              <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">5</span>
              <span class="text-[#4ECDC4]">$</span>
              <span class="ml-2 text-text-secondary">cat skills/tools-and-practices</span>
            </div>
            <div class="flex mt-1.5 flex-wrap">
              <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">6</span>
              <div class="flex flex-wrap gap-1.5">
                {["Scientific Computing", "Data Visualization", "Open Source"].map((skill) => (
                  <span class="inline-flex items-center px-2 py-0.5 text-xs rounded-md bg-[#4ECDC4]/10 text-[#4ECDC4] border border-[#4ECDC4]/20">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </TerminalWindow>
    </div>
  </section>
</PageLayout>
