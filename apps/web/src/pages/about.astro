---
import PageLayout from "@layouts/PageLayout.astro";
import { SITE } from "@lib/constants";

import BlurReveal from "@components/islands/BlurReveal";
---

<PageLayout title="About" description="Computational chemist, ML researcher, and open-source builder at ICT Mumbai. Spectroscopy, deep learning, and scientific computing.">
  <section class="py-12 max-w-3xl">
    <a href="/" class="inline-flex items-center gap-1 text-[11px] font-mono text-text-muted hover:text-text-secondary transition-colors mb-8">
      ← tubhyam.dev
    </a>

    <BlurReveal
      client:idle
      text="About"
      className="text-4xl font-heading font-bold text-text-primary mb-8 tracking-tight"
      as="h1"
    />

    <!-- Bio -->
    <div class="about-section mb-10">
      <p class="text-text-secondary leading-relaxed mb-4">
        I'm <span class="text-text-primary font-medium">Tubhyam Karthikeyan</span>, a computational chemist and machine learning
        researcher at <span class="text-text-primary font-medium">ICT Mumbai</span>. I work at the intersection of chemistry,
        mathematics, and AI — building tools that help scientists understand molecular behavior.
      </p>
      <p class="text-text-secondary leading-relaxed mb-4">
        My current research focuses on the <em class="text-accent not-italic">spectral inverse problem</em>: can you
        determine a molecule's structure from its vibrational spectrum? I'm
        developing the <a href="/research/spectral-identifiability" class="text-text-primary hover:text-accent transition-colors underline underline-offset-2">theoretical framework</a> (group-theoretic identifiability)
        and the ML models (<a href="/projects/spektron" class="text-text-primary hover:text-accent transition-colors underline underline-offset-2">Spektron</a>, a hybrid SSM-attention architecture)
        to answer this question.
      </p>
      <p class="text-text-secondary leading-relaxed">
        When I'm not doing research, I build open-source Python libraries like
        <a href="/projects/spectrakit" class="text-text-primary hover:text-accent transition-colors underline underline-offset-2">SpectraKit</a> for spectroscopy,
        create <a href="/simulations" class="text-text-primary hover:text-accent transition-colors underline underline-offset-2">interactive browser-based simulations</a>,
        and <a href="/blog" class="text-text-primary hover:text-accent transition-colors underline underline-offset-2">write about what I learn</a>.
      </p>
    </div>

    <!-- Skills -->
    <div>
      <p class="text-[10px] font-mono text-accent uppercase tracking-[0.2em] mb-6">Skills & Stack</p>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <!-- ML & Scientific Python -->
        <div>
          <p class="text-xs font-mono text-text-muted uppercase tracking-wider mb-3">ML / Scientific Python</p>
          <div class="flex flex-wrap gap-1.5">
            {["Python", "PyTorch", "JAX", "CUDA", "scikit-learn", "RDKit", "NumPy", "SciPy"].map((skill) => (
              <span class="skill-tag skill-amber">{skill}</span>
            ))}
          </div>
        </div>

        <!-- Domain -->
        <div>
          <p class="text-xs font-mono text-text-muted uppercase tracking-wider mb-3">Chemistry & Research</p>
          <div class="flex flex-wrap gap-1.5">
            {["Spectroscopy", "Computational Chemistry", "Group Theory", "Information Theory", "Molecular Modeling"].map((skill) => (
              <span class="skill-tag skill-neutral">{skill}</span>
            ))}
          </div>
        </div>

        <!-- Web -->
        <div>
          <p class="text-xs font-mono text-text-muted uppercase tracking-wider mb-3">Web</p>
          <div class="flex flex-wrap gap-1.5">
            {["TypeScript", "React", "Astro", "Tailwind CSS"].map((skill) => (
              <span class="skill-tag skill-neutral">{skill}</span>
            ))}
          </div>
        </div>

        <!-- Infra -->
        <div>
          <p class="text-xs font-mono text-text-muted uppercase tracking-wider mb-3">Infrastructure</p>
          <div class="flex flex-wrap gap-1.5">
            {["Docker", "Linux", "Vast.ai", "Vercel", "GitHub Actions"].map((skill) => (
              <span class="skill-tag skill-neutral">{skill}</span>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Contact -->
    <div class="mt-12 pt-8 border-t border-border">
      <p class="text-[10px] font-mono text-accent uppercase tracking-[0.2em] mb-4">Contact</p>
      <p class="text-text-secondary text-sm mb-3">
        I'm open to research collaborations, interesting conversations about computational chemistry, and fellowship/internship opportunities.
      </p>
      <a href={`mailto:${SITE.email}`} class="text-sm font-mono text-accent hover:text-text-primary transition-colors">
        {SITE.email} →
      </a>
    </div>
  </section>
</PageLayout>

<style>
  .about-section {
    line-height: 1.8;
  }

  .skill-tag {
    display: inline-flex;
    align-items: center;
    padding: 2px 10px;
    border-radius: 9999px;
    font-size: 11px;
    font-family: var(--font-mono);
    border: 1px solid;
    transition: all 0.2s ease;
  }

  .skill-amber {
    color: var(--color-accent);
    border-color: rgba(201, 160, 74, 0.25);
    background: rgba(201, 160, 74, 0.06);
  }

  .skill-neutral {
    color: var(--color-text-secondary);
    border-color: var(--color-border);
    background: var(--color-surface);
  }

  .skill-amber:hover {
    border-color: rgba(201, 160, 74, 0.5);
    background: rgba(201, 160, 74, 0.1);
  }

  .skill-neutral:hover {
    border-color: var(--color-border-hover);
    background: var(--color-surface-hover);
  }
</style>
