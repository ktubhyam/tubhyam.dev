---
import PageLayout from "@layouts/PageLayout.astro";
import TerminalWindow from "@components/ui/TerminalWindow.astro";
import TerminalBreadcrumb from "@components/ui/TerminalBreadcrumb.astro";
import { SITE, SOCIAL_LINKS } from "@lib/constants";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE.url },
    { "@type": "ListItem", "position": 2, "name": "Contact", "item": `${SITE.url}/contact` },
  ],
};
---

<PageLayout title="Contact" description="Get in touch for collaborations, questions, or just to say hello.">
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <section class="py-12 max-w-2xl">
    <TerminalBreadcrumb segments={[{ label: "contact" }]} />

    <TerminalWindow title="contact" status="reach out" class="mt-2">
      <div class="space-y-1.5">
        <!-- whoami -->
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">1</span>
          <span class="text-[#34D399]">$</span>
          <span class="ml-2 text-text-secondary">whoami</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">2</span>
          <span class="text-text-primary font-medium">Tubhyam Karthikeyan</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">3</span>
          <span class="text-text-secondary">&nbsp;</span>
        </div>

        <!-- cat contact.json -->
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">4</span>
          <span class="text-[#34D399]">$</span>
          <span class="ml-2 text-text-secondary">cat contact.json</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">5</span>
          <span class="text-text-muted">{"{"}</span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">6</span>
          <span class="text-text-muted pl-4">
            "<span class="text-text-secondary">email</span>"<span class="text-text-muted">:</span>
            "<a href={`mailto:${SITE.email}`} class="text-[#C9A04A] hover:underline">{SITE.email}</a>"<span class="text-text-muted">,</span>
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">7</span>
          <span class="text-text-muted pl-4">
            "<span class="text-text-secondary">github</span>"<span class="text-text-muted">:</span>
            "<a href={SITE.github} target="_blank" rel="noopener noreferrer" class="text-[#34D399] hover:underline">{SITE.github}</a>"<span class="text-text-muted">,</span>
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">8</span>
          <span class="text-text-muted pl-4">
            "<span class="text-text-secondary">twitter</span>"<span class="text-text-muted">:</span>
            "<a href={SITE.twitter} target="_blank" rel="noopener noreferrer" class="text-[#60A5FA] hover:underline">{SITE.twitter}</a>"<span class="text-text-muted">,</span>
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">9</span>
          <span class="text-text-muted pl-4">
            "<span class="text-text-secondary">linkedin</span>"<span class="text-text-muted">:</span>
            "<a href={SITE.linkedin} target="_blank" rel="noopener noreferrer" class="text-[#A78BFA] hover:underline">{SITE.linkedin}</a>"
          </span>
        </div>
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">10</span>
          <span class="text-text-muted">{"}"}</span>
        </div>
      </div>
    </TerminalWindow>
  </section>
</PageLayout>
