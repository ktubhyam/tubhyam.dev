---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="404 — Not Found" description="The page you're looking for doesn't exist. Return home or explore the blog, projects, and research.">
  <section class="min-h-[70vh] flex items-center justify-center px-6">
    <div class="w-full max-w-lg">
      <div class="rounded-xl border border-border overflow-hidden bg-bg-secondary">
        <!-- Title bar -->
        <div class="flex items-center gap-2 px-4 py-2.5 bg-surface border-b border-border">
          <div class="flex items-center gap-1.5">
            <div class="w-[10px] h-[10px] rounded-full bg-[#FF5F57]"></div>
            <div class="w-[10px] h-[10px] rounded-full bg-[#FEBC2E]"></div>
            <div class="w-[10px] h-[10px] rounded-full bg-[#28C840]"></div>
          </div>
          <span class="ml-2 text-[10px] font-mono text-text-muted/60 select-none">bash</span>
        </div>

        <!-- Terminal content -->
        <div class="p-5 font-mono text-sm leading-relaxed">
          <div class="flex gap-2">
            <span class="text-[#555]">$</span>
            <span class="text-[#34D399]">curl</span>
            <span class="text-text-secondary" id="not-found-path"></span>
          </div>
          <h1 class="mt-3">
            <span class="text-[#FF5F57] text-sm font-mono">Error 404</span>
            <span class="text-text-muted text-sm font-mono"> — page not found</span>
          </h1>
          <div class="mt-1 text-text-muted text-xs">
            The requested path does not exist or has been moved.
          </div>
          <div class="mt-5 flex gap-2">
            <span class="text-[#555]">$</span>
            <span class="text-[#34D399]">cd</span>
            <a href="/" class="text-accent hover:underline transition-colors">/home</a>
          </div>
          <div class="mt-3 flex flex-wrap gap-x-4 gap-y-1 text-xs">
            <a href="/blog" class="text-text-muted hover:text-accent transition-colors">/blog</a>
            <a href="/projects" class="text-text-muted hover:text-accent transition-colors">/projects</a>
            <a href="/research" class="text-text-muted hover:text-accent transition-colors">/research</a>
            <a href="/about" class="text-text-muted hover:text-accent transition-colors">/about</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    const el = document.getElementById("not-found-path");
    if (el) el.textContent = window.location.pathname;
  </script>
</BaseLayout>
