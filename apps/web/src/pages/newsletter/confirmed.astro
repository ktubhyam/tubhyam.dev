---
import PageLayout from "@layouts/PageLayout.astro";
import { PUBLICATION } from "@lib/constants";
---

<PageLayout title="Subscribed" description={`You're subscribed to ${PUBLICATION.name}.`}>
  <section class="py-24 max-w-xl mx-auto">
    <!-- Terminal window -->
    <div class="rounded-xl border border-border overflow-hidden bg-bg-secondary relative">
      <!-- Title bar -->
      <div class="flex items-center gap-2 px-4 py-2.5 bg-surface border-b border-border">
        <div class="flex items-center gap-1.5">
          <div class="w-[10px] h-[10px] rounded-full bg-[#FF5F57]"></div>
          <div class="w-[10px] h-[10px] rounded-full bg-[#FEBC2E]"></div>
          <div class="w-[10px] h-[10px] rounded-full bg-[#28C840]"></div>
        </div>
        <span class="ml-2 text-[10px] font-mono text-text-muted/60 select-none">subscribe</span>
        <span class="ml-auto text-[10px] font-mono text-[#34D399]/60 select-none">
          confirmed
        </span>
      </div>

      <!-- Terminal content -->
      <div class="p-4 font-mono text-xs md:text-sm leading-relaxed relative overflow-hidden">
        <!-- Line 1: command -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">1</span>
          <span>
            <span class="text-[#555]">$ </span>
            <span class="text-[#34D399]">subscribe</span>
            <span class="text-[#e0e0e0]"> --confirm</span>
          </span>
        </div>

        <!-- Line 2: blank -->
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">2</span>
        </div>

        <!-- Line 3: success checkmark -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">3</span>
          <span>
            <span class="text-[#34D399]">✓</span>
            <span class="text-[#e0e0e0] ml-2">Subscription active</span>
          </span>
        </div>

        <!-- Line 4: schedule -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">4</span>
          <span class="text-[#e0e0e0]">
            New posts from <span class="text-[#A78BFA]">{PUBLICATION.name}</span> go out every
            <span class="text-[#C9A04A]">Thursday</span>.
          </span>
        </div>

        <!-- Line 5: blank -->
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">5</span>
        </div>

        <!-- Line 6: what to expect header -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">6</span>
          <span class="text-[#C9A04A]">what to expect:</span>
        </div>

        <!-- Line 7: bullet 1 -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">7</span>
          <span>
            <span class="text-[#4ECDC4] mr-2">·</span>
            <span class="text-[#999]">Deep dives on ML for spectroscopy</span>
          </span>
        </div>

        <!-- Line 8: bullet 2 -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">8</span>
          <span>
            <span class="text-[#A78BFA] mr-2">·</span>
            <span class="text-[#999]">Architecture decisions and debugging stories</span>
          </span>
        </div>

        <!-- Line 9: bullet 3 -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">9</span>
          <span>
            <span class="text-[#34D399] mr-2">·</span>
            <span class="text-[#999]">Research updates from the Spektron project</span>
          </span>
        </div>

        <!-- Line 10: blank -->
        <div class="flex">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">10</span>
        </div>

        <!-- Line 11: prompt -->
        <div class="flex items-baseline">
          <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">11</span>
          <span>
            <span class="text-[#555]">$ </span>
            <span class="inline-block w-[7px] h-[14px] bg-[#C9A04A] animate-[cursor-blink_1.2s_step-end_infinite] translate-y-[1px]"></span>
          </span>
        </div>

        <!-- Scanline overlay -->
        <div
          class="pointer-events-none absolute inset-0 opacity-[0.03]"
          style="background-image: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(255,255,255,0.1) 2px, rgba(255,255,255,0.1) 4px); background-size: 100% 4px;"
        ></div>
      </div>
    </div>

    <div class="mt-6 text-center">
      <a href="/blog" class="text-sm font-mono text-accent hover:text-accent/80 transition-colors">
        &larr; Read the latest posts
      </a>
    </div>
  </section>
</PageLayout>

<style>
  @keyframes cursor-blink {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 0; }
  }
</style>
