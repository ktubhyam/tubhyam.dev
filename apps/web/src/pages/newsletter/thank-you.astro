---
import PageLayout from "@layouts/PageLayout.astro";
import { PUBLICATION } from "@lib/constants";
---

<PageLayout title="Check Your Inbox" description={`Confirm your subscription to ${PUBLICATION.name}.`}>
  <section class="py-24 max-w-xl mx-auto">
    <!-- Terminal window -->
    <div class="rounded-xl border border-border overflow-hidden bg-bg-secondary relative">
      <!-- Title bar -->
      <div class="flex items-center gap-2 px-4 py-2.5 bg-surface border-b border-border">
        <div class="flex items-center gap-1.5">
          <div class="w-[10px] h-[10px] rounded-full bg-[#FF5F57]"></div>
          <div class="w-[10px] h-[10px] rounded-full bg-[#FEBC2E]"></div>
          <div class="w-[10px] h-[10px] rounded-full bg-[#28C840]"></div>
        </div>
        <span class="ml-2 text-[10px] font-mono text-text-muted/60 select-none">mail</span>
        <span class="ml-auto flex items-center gap-1.5 text-[10px] font-mono text-[#C9A04A]">
          <span class="w-1.5 h-1.5 rounded-full bg-[#C9A04A] animate-pulse"></span>
          pending
        </span>
      </div>

      <!-- Terminal content -->
      <div class="p-4 font-mono text-xs md:text-sm leading-relaxed relative overflow-hidden">
        <!-- Line 1: command -->
        <div class="flex items-baseline">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">1</span>
          <span>
            <span class="text-[#555]">$ </span>
            <span class="text-[#34D399]">mail</span>
            <span class="text-[#e0e0e0]"> --check-inbox</span>
          </span>
        </div>

        <!-- Line 2: blank -->
        <div class="flex">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">2</span>
        </div>

        <!-- Line 3: envelope icon -->
        <div class="flex items-baseline">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">3</span>
          <span class="text-[#C9A04A] text-lg">âœ‰</span>
        </div>

        <!-- Line 4: blank -->
        <div class="flex">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">4</span>
        </div>

        <!-- Line 5: confirmation sent -->
        <div class="flex items-baseline">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">5</span>
          <span class="text-[#e0e0e0]">
            Confirmation sent to your address.
          </span>
        </div>

        <!-- Line 6: click the link -->
        <div class="flex items-baseline">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">6</span>
          <span class="text-[#e0e0e0]">
            Click the link inside to activate your subscription to
            <span class="text-[#A78BFA]">{PUBLICATION.name}</span>.
          </span>
        </div>

        <!-- Line 7: blank -->
        <div class="flex">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">7</span>
        </div>

        <!-- Line 8: hint -->
        <div class="flex items-baseline">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">8</span>
          <span class="text-[#555]">Didn't get it? Check your spam folder.</span>
        </div>

        <!-- Line 9: blank -->
        <div class="flex">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">9</span>
        </div>

        <!-- Line 10: prompt -->
        <div class="flex items-baseline">
          <span class="w-5 text-right mr-3 select-none flex-shrink-0 text-[#333]">10</span>
          <span>
            <span class="text-[#555]">$ </span>
            <span class="inline-block w-[7px] h-[14px] bg-[#C9A04A] animate-[cursor-blink_1.2s_step-end_infinite] translate-y-[1px]"></span>
          </span>
        </div>

        <!-- Scanline overlay -->
        <div
          class="pointer-events-none absolute inset-0 opacity-[0.03]"
          style="background-image: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(255,255,255,0.1) 2px, rgba(255,255,255,0.1) 4px); background-size: 100% 4px;"
        ></div>
      </div>
    </div>

    <div class="mt-6 text-center">
      <a href="/blog" class="text-sm font-mono text-accent hover:text-accent/80 transition-colors">
        &larr; Back to blog
      </a>
    </div>
  </section>
</PageLayout>

<style>
  @keyframes cursor-blink {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 0; }
  }
</style>
