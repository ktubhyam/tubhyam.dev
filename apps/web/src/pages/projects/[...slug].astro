---
import ProseLayout from "@layouts/ProseLayout.astro";
import TerminalWindow from "@components/ui/TerminalWindow.astro";
import TerminalBreadcrumb from "@components/ui/TerminalBreadcrumb.astro";
import { getCollection, render } from "astro:content";
import { SITE } from "@lib/constants";

import BlurReveal from "@components/islands/BlurReveal";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const statusColorMap: Record<string, string> = {
  active: "#34D399",
  completed: "#4ECDC4",
  archived: "#FF6B6B",
};

const statusColor = statusColorMap[project.data.status] ?? "#34D399";

const accentColors = ["#A78BFA", "#C9A04A", "#4ECDC4", "#34D399", "#60A5FA", "#FF6B6B"];

const canonicalUrl = new URL(`/projects/${project.id}`, SITE.url).toString();

const projectSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareSourceCode",
  "name": project.data.title,
  "description": project.data.description,
  ...(project.data.github && { "codeRepository": project.data.github }),
  "author": {
    "@type": "Person",
    "name": SITE.author,
    "url": SITE.url,
    "sameAs": [SITE.github, SITE.twitter, SITE.linkedin],
  },
  "keywords": project.data.tags?.join(", ") ?? "",
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE.url },
    { "@type": "ListItem", "position": 2, "name": "Projects", "item": `${SITE.url}/projects` },
    { "@type": "ListItem", "position": 3, "name": project.data.title, "item": canonicalUrl },
  ],
};
---

<ProseLayout title={project.data.title} description={project.data.description}>
  <script type="application/ld+json" set:html={JSON.stringify(projectSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <header class="mb-12 not-prose">
    <TerminalBreadcrumb segments={[{ label: "projects", href: "/projects" }, { label: project.data.title }]} />
    <TerminalWindow title={project.id} status={project.data.status} statusColor={statusColor}>
      <BlurReveal
        client:idle
        text={project.data.title}
        className="text-4xl font-heading font-bold text-text-primary"
        as="h1"
      />
      <p class="mt-2 text-text-secondary">{project.data.description}</p>

      {project.data.tags && project.data.tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {project.data.tags.map((tag: string, i: number) => {
            const color = accentColors[i % accentColors.length];
            return (
              <span
                class="inline-flex items-center rounded-full text-xs px-2.5 py-1"
                style={`background: ${color}15; color: ${color};`}
              >
                #{tag}
              </span>
            );
          })}
        </div>
      )}

      {(project.data.github || project.data.demo) && (
        <div class="mt-5 space-y-1.5">
          {project.data.github && (
            <div class="flex items-center gap-2">
              <span class="text-[#34D399]">$</span>
              <span class="text-text-muted">open</span>
              <a
                href={project.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[#60A5FA] hover:underline"
              >
                {project.data.github}
              </a>
            </div>
          )}
          {project.data.demo && (
            <div class="flex items-center gap-2">
              <span class="text-[#34D399]">$</span>
              <span class="text-text-muted">open</span>
              <a
                href={project.data.demo}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[#C9A04A] hover:underline"
              >
                {project.data.demo}
              </a>
            </div>
          )}
        </div>
      )}
    </TerminalWindow>
  </header>

  <Content />
</ProseLayout>
