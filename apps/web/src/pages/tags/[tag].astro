---
import PageLayout from "@layouts/PageLayout.astro";
import TerminalWindow from "@components/ui/TerminalWindow.astro";
import TerminalBreadcrumb from "@components/ui/TerminalBreadcrumb.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@lib/utils";

import BlurReveal from "@components/islands/BlurReveal";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  const projects = await getCollection("projects");
  const research = await getCollection("research");
  const simulations = await getCollection("simulations");
  const libraries = await getCollection("libraries");

  const allTags = new Set<string>();
  posts.forEach((post) => post.data.tags.forEach((tag) => allTags.add(tag)));
  projects.forEach((project) => project.data.tags.forEach((tag) => allTags.add(tag)));
  research.forEach((item) => item.data.tags.forEach((tag) => allTags.add(tag)));
  simulations.forEach((item) => item.data.tags.forEach((tag) => allTags.add(tag)));
  libraries.forEach((item) => item.data.tags.forEach((tag) => allTags.add(tag)));

  return Array.from(allTags).map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: posts.filter((p) => p.data.tags.includes(tag)),
      projects: projects.filter((p) => p.data.tags.includes(tag)),
      research: research.filter((p) => p.data.tags.includes(tag)),
      simulations: simulations.filter((p) => p.data.tags.includes(tag)),
      libraries: libraries.filter((p) => p.data.tags.includes(tag)),
    },
  }));
}

const { tag, posts, projects, research, simulations, libraries } = Astro.props;
const totalItems = posts.length + projects.length + research.length + simulations.length + libraries.length;

const typeColors: Record<string, string> = {
  Blog: "#C9A04A",
  Project: "#4ECDC4",
  Research: "#A78BFA",
  Simulation: "#34D399",
  Library: "#60A5FA",
};

type TagItem = {
  type: string;
  title: string;
  href: string;
  detail: string;
  color: string;
};

const items: TagItem[] = [
  ...posts.map((post: CollectionEntry<"blog">) => ({
    type: "Blog",
    title: post.data.title,
    href: `/blog/${post.id}`,
    detail: formatDate(post.data.date),
    color: typeColors.Blog,
  })),
  ...projects.map((project: CollectionEntry<"projects">) => ({
    type: "Project",
    title: project.data.title,
    href: `/projects/${project.id}`,
    detail: project.data.description,
    color: typeColors.Project,
  })),
  ...research.map((item: CollectionEntry<"research">) => ({
    type: "Research",
    title: item.data.title,
    href: `/research/${item.id}`,
    detail: item.data.abstract.slice(0, 120) + "...",
    color: typeColors.Research,
  })),
  ...simulations.map((item: CollectionEntry<"simulations">) => ({
    type: "Simulation",
    title: item.data.title,
    href: `/simulations/${item.id}`,
    detail: item.data.description,
    color: typeColors.Simulation,
  })),
  ...libraries.map((item: CollectionEntry<"libraries">) => ({
    type: "Library",
    title: item.data.title,
    href: `/libraries/${item.id}`,
    detail: item.data.description,
    color: typeColors.Library,
  })),
];
---

<PageLayout title={`#${tag}`} description={`Content tagged with "${tag}"`}>
  <section class="py-12">
    <TerminalBreadcrumb segments={[{ label: "tags", href: "/tags" }, { label: `#${tag}` }]} />
    <BlurReveal
      client:idle
      text={`#${tag}`}
      className="text-3xl font-heading font-medium text-text-primary mb-2 tracking-tight"
      as="h1"
    />
    <p
      class="text-text-muted mb-10"
      style="opacity: 0; animation: fade-up 0.5s ease-out 0.4s forwards;"
    >
      {totalItems} items tagged with "{tag}"
    </p>

    <TerminalWindow title={`#${tag}`} status={`${totalItems} results`}>
      <div class="flex items-center gap-2 text-text-muted mb-4">
        <span class="text-[#34D399]">$</span>
        <span>grep -r "{tag}" --include="*.md"</span>
      </div>
      <div class="grid gap-0">
        {items.map((item, i) => (
          <a
            href={item.href}
            class="group flex items-start gap-3 py-2.5 px-2 -mx-2 rounded-md transition-all duration-200 border-l-2 border-transparent"
            style={`--item-color: ${item.color};`}
          >
            <span class="w-6 text-right mr-3 select-none flex-shrink-0 text-[#333]">{i + 1}</span>
            <span
              class="text-[10px] font-mono uppercase tracking-wider px-1.5 py-0.5 rounded flex-shrink-0 mt-0.5"
              style={`background: ${item.color}15; color: ${item.color};`}
            >
              {item.type}
            </span>
            <div class="min-w-0 flex-1">
              <span
                class="text-sm transition-colors duration-200"
                style={`color: ${item.color};`}
              >
                {item.title}
              </span>
              <p class="text-xs text-text-muted/60 mt-0.5 truncate">{item.detail}</p>
            </div>
          </a>
        ))}
      </div>
    </TerminalWindow>
  </section>
</PageLayout>

<style>
  a.group:hover {
    border-left-color: var(--item-color);
    background: color-mix(in srgb, var(--item-color) 5%, transparent);
  }
</style>
