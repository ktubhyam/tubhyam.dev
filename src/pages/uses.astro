---
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout title="Uses" description="My tech stack, tools, and setup.">
  <section class="py-12 max-w-3xl">
    <h1 class="text-3xl font-heading font-medium text-text-primary mb-2 tracking-tight">Uses</h1>
    <p class="text-text-muted mb-10">
      The tools and tech I use daily for research, development, and writing.
    </p>

    <div class="space-y-12">
      {[
        {
          title: "Editor & IDE",
          items: [
            { name: "Cursor", desc: "VS Code fork with AI integration" },
            { name: "Claude Code", desc: "AI pair programming in the terminal" },
            { name: "Vesper", desc: "Dark theme across all editors" },
            { name: "JetBrains Mono", desc: "Monospace font for code" },
          ],
        },
        {
          title: "Development",
          items: [
            { name: "TypeScript + Astro", desc: "For web projects" },
            { name: "Python + PyTorch", desc: "For ML and scientific computing" },
            { name: "Tailwind CSS 4", desc: "Utility-first styling" },
            { name: "Git + lazygit", desc: "Version control" },
          ],
        },
        {
          title: "Research",
          items: [
            { name: "Typst", desc: "Modern typesetting for papers" },
            { name: "Zotero", desc: "Reference management" },
            { name: "Obsidian", desc: "Note-taking and knowledge management" },
          ],
        },
        {
          title: "Hardware",
          items: [
            { name: "4x RTX 5090", desc: "GPU compute for ML training" },
          ],
        },
      ].map((section) => (
        <div>
          <h2 class="text-xs font-mono text-text-muted uppercase tracking-widest mb-4">
            {section.title}
          </h2>
          <div class="grid gap-2">
            {section.items.map((item) => (
              <div class="card-interactive rounded-xl px-5 py-4 flex items-center justify-between">
                <span class="text-text-primary text-sm font-medium">{item.name}</span>
                <span class="text-xs text-text-muted">{item.desc}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
</PageLayout>
