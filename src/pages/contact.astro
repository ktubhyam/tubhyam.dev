---
import PageLayout from "@layouts/PageLayout.astro";
import { SITE, SOCIAL_LINKS } from "@lib/constants";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE.url },
    { "@type": "ListItem", "position": 2, "name": "Contact", "item": `${SITE.url}/contact` },
  ],
};
---

<PageLayout title="Contact" description="Get in touch for collaborations, questions, or just to say hello.">
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <section class="py-12 max-w-2xl">
    <h1 class="text-3xl font-heading font-medium text-text-primary mb-2 tracking-tight">Contact</h1>
    <p class="text-text-muted mb-10">
      Want to collaborate on research, discuss open-source projects, or just chat? Reach out.
    </p>

    <div class="card rounded-2xl p-8">
      <div class="grid gap-8">
        <div>
          <h2 class="text-xs font-mono text-text-muted uppercase tracking-widest mb-4">
            Email
          </h2>
          <a
            href={`mailto:${SITE.email}`}
            class="text-text-primary hover:text-accent transition-colors text-lg"
          >
            {SITE.email}
          </a>
        </div>

        <div>
          <h2 class="text-xs font-mono text-text-muted uppercase tracking-widest mb-4">
            Social
          </h2>
          <div class="flex flex-wrap gap-3">
            {SOCIAL_LINKS.filter((l) => l.href.startsWith("http")).map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="card-interactive rounded-xl px-4 py-2 text-sm text-text-muted hover:text-text-secondary"
              >
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
