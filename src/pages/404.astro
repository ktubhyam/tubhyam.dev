---
import BaseLayout from "@layouts/BaseLayout.astro";
import StarBorder from "@components/ui/StarBorder.astro";
---

<BaseLayout title="404 â€” Not Found">
  <section class="min-h-[70vh] flex flex-col items-center justify-center px-6 text-center">
    <span class="text-[clamp(5rem,20vw,12rem)] font-heading font-bold tracking-[-0.06em] leading-none text-text-muted/10 select-none">
      404
    </span>
    <h1 class="mt-4 text-2xl md:text-3xl font-heading font-semibold text-text-primary tracking-tight">
      Page not found
    </h1>
    <p class="mt-3 text-sm text-text-muted max-w-md">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="mt-8">
      <StarBorder as="a" href="/" color="#C9A04A" speed="4s">
        Back to Home
      </StarBorder>
    </div>
  </section>
</BaseLayout>
