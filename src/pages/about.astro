---
import PageLayout from "@layouts/PageLayout.astro";
import GlassButton from "@components/ui/GlassButton.astro";
import TerminalBreadcrumb from "@components/ui/TerminalBreadcrumb.astro";
import { SITE } from "@lib/constants";

import BlurReveal from "@components/islands/BlurReveal";
import TextScramble from "@components/islands/TextScramble";
import StaggerReveal from "@components/islands/StaggerReveal";
---

<PageLayout title="About" description="Tubhyam Karthikeyan — computational chemist, ML researcher, and open-source builder at ICT Mumbai.">
  <section class="py-12 max-w-3xl">
    <TerminalBreadcrumb segments={[{ label: "about" }]} />
    <BlurReveal
      client:idle
      text="About"
      className="text-3xl font-heading font-medium text-text-primary mb-8 tracking-tight"
      as="h1"
    />

    <div
      class="prose prose-invert prose-lg max-w-none"
      style="opacity: 0; animation: fade-up 0.6s ease-out 0.3s forwards;"
    >
      <p>
        I'm <strong>Tubhyam Karthikeyan</strong>, a computational chemist and machine learning
        researcher at <strong>ICT Mumbai</strong>. I work at the intersection of chemistry,
        mathematics, and AI — building tools that help scientists understand molecular behavior.
      </p>

      <p>
        My current research focuses on the <em>spectral inverse problem</em>: can you determine
        a molecule's structure from its vibrational spectrum? I'm developing the
        <a href="/research/spectral-identifiability">theoretical framework</a> (group-theoretic identifiability)
        and the ML models (<a href="/projects/spektron">Spektron</a>, a symmetry-aware transformer)
        to answer this question.
      </p>

      <p>
        When I'm not doing research, I build open-source Python libraries like
        <a href="/projects/spectrakit">SpectraKit</a> for spectroscopy,
        create <a href="/simulations">interactive browser-based simulations</a>,
        and <a href="/blog">write about what I learn</a>.
      </p>
    </div>

    <!-- Skills -->
    <div class="mt-16">
      <div class="flex items-center gap-2 mb-6">
        <span class="text-accent font-mono text-xs">&gt;</span>
        <TextScramble
          client:visible
          text="Skills"
          className="text-xs font-mono text-text-muted uppercase tracking-widest"
          as="h2"
          speed={30}
        />
      </div>
      <StaggerReveal client:visible className="grid grid-cols-2 sm:grid-cols-3 gap-2" stagger={0.05}>
        {[
          "Python", "PyTorch", "TypeScript", "React", "Astro",
          "Computational Chemistry", "Machine Learning", "Group Theory",
          "Spectroscopy", "Scientific Computing", "Data Visualization", "Open Source",
        ].map((skill) => (
          <div class="card-interactive rounded-xl px-4 py-3 text-sm text-text-muted text-center">
            {skill}
          </div>
        ))}
      </StaggerReveal>
    </div>

    <div
      class="mt-16 flex flex-wrap gap-4"
      style="opacity: 0; animation: fade-up 0.5s ease-out 0.6s forwards;"
    >
      <GlassButton href="/#contact">Get in Touch</GlassButton>
    </div>
  </section>
</PageLayout>
