---
interface Props {
  variant?: "default" | "outline" | "green" | "cyan" | "orange";
  class?: string;
}

const { variant = "default", class: className } = Astro.props;

const variantStyles = {
  default: "bg-white/[0.06] text-text-secondary border-transparent",
  outline: "bg-transparent text-text-muted border-border",
  green: "bg-emerald-500/10 text-emerald-400 border-emerald-500/20",
  cyan: "bg-cyan-500/10 text-cyan-400 border-cyan-500/20",
  orange: "bg-orange-500/10 text-orange-400 border-orange-500/20",
};
---

<span
  class:list={[
    "inline-flex items-center px-2.5 py-0.5 text-xs font-medium rounded-full border",
    variantStyles[variant],
    className,
  ]}
>
  <slot />
</span>
