---
interface Props {
  href?: string;
  class?: string;
  padding?: "sm" | "md" | "lg";
}

const { href, class: className, padding = "md" } = Astro.props;

const paddingMap = {
  sm: "p-4",
  md: "p-6",
  lg: "p-8",
};

const Tag = href ? "a" : "div";
---

<Tag
  href={href}
  class:list={[
    "card-interactive block",
    paddingMap[padding],
    className,
  ]}
>
  <slot />
</Tag>
