---
import { SITE, SOCIAL_LINKS } from "@lib/constants";

const year = new Date().getFullYear();
---

<footer class="relative mt-32 pb-12">
  <div class="mx-auto max-w-3xl px-6">
    <!-- Separator -->
    <div class="separator mb-12"></div>

    <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
      <!-- Footer nav -->
      <div class="flex items-center gap-4 text-xs text-text-muted">
        <a href="/about" class="hover:text-text-secondary transition-colors">About</a>
        <a href="/cv" class="hover:text-text-secondary transition-colors">CV</a>
        <a href="/tags" class="hover:text-text-secondary transition-colors">Tags</a>
        <a href="/now" class="hover:text-text-secondary transition-colors">Now</a>
        <a href="/resources" class="hover:text-text-secondary transition-colors">Resources</a>
        <a href="/uses" class="hover:text-text-secondary transition-colors">Uses</a>
        <a href="/search" class="hover:text-text-secondary transition-colors">Search</a>
        <a href="/rss.xml" class="hover:text-text-secondary transition-colors">RSS</a>
        <a href="/privacy" class="hover:text-text-secondary transition-colors">Privacy</a>
        <a href="/terms" class="hover:text-text-secondary transition-colors">Terms</a>
      </div>

      <!-- Social links -->
      <div class="flex items-center gap-5">
        {
          SOCIAL_LINKS.map((link) => (
            <a
              href={link.href}
              target={link.href.startsWith("http") ? "_blank" : undefined}
              rel={link.href.startsWith("http") ? "noopener noreferrer" : undefined}
              class="text-text-muted hover:text-text-secondary transition-colors duration-200"
              aria-label={link.label}
            >
              {link.icon === "github" && (
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
                </svg>
              )}
              {link.icon === "twitter" && (
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              )}
              {link.icon === "linkedin" && (
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              )}
              {link.icon === "mail" && (
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="2" y="4" width="20" height="16" rx="2" />
                  <path d="M22 7l-10 7L2 7" />
                </svg>
              )}
              {link.icon === "rss" && (
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M4 11a9 9 0 019 9M4 4a16 16 0 0116 16" />
                  <circle cx="5" cy="19" r="1" fill="currentColor" />
                </svg>
              )}
            </a>
          ))
        }
      </div>

      <p class="text-xs text-text-muted">
        &copy; {year} {SITE.author}
      </p>
    </div>
  </div>
</footer>
